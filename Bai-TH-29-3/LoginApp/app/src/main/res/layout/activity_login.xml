<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26dp"
        android:textColor="#9E8E8E"
        android:text="MÀN HÌNH ĐĂNG NHẬP"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_header2"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/ed_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="nhap username"
        app:layout_constraintTop_toTopOf="@+id/tv_username"
        app:layout_constraintLeft_toRightOf="@id/tv_username"
        app:layout_constraintBottom_toBottomOf="@id/tv_username"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/ed_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="nhap mat khau"
        app:layout_constraintTop_toTopOf="@+id/tv_password"
        app:layout_constraintLeft_toRightOf="@id/tv_password"
        app:layout_constraintBottom_toBottomOf="@id/tv_password"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_password"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText

        android:layout_marginLeft="10dp"
        android:id="@+id/ed_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="nhap email"
        app:layout_constraintTop_toBottomOf="@+id/ed_password"
        app:layout_constraintLeft_toLeftOf="@id/ed_password"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:textSize="20dp"
        android:backgroundTint="#04CEE8"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>