<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26dp"
        android:textColor="#9E8E8E"
        android:text="BẠN ĐANG Ở MAN HÌNH THỨ 2"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUAY LẠI TRANG CHỦ"
        android:textSize="20dp"
        android:backgroundTint="#04CEE8"
        app:layout_constraintTop_toBottomOf="@+id/tv_header2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />

</android.support.constraint.ConstraintLayout>