<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_header3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="26dp"
        android:textColor="#9E8E8E"
        android:text="MÀN HÌNH CHÍNH"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_header3"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_username1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/tv_welcome"
        app:layout_constraintLeft_toRightOf="@id/tv_welcome"
        />

    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/tiki_logo"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/img_logo">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đăng xuất"
            android:textSize="20dp"
            android:backgroundTint="#04CEE8"
            />
        <Button
            android:id="@+id/btn_quitapp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thoát"
            android:textSize="20dp"
            android:backgroundTint="#04CEE8"
            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>